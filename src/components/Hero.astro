---
interface Props {
	title: string;
	tagline?: string;
}

const { tagline, title } = Astro.props;
---

<div class='text-start text-lg flex flex-col gap-4'>
	<div class="flex flex-col gap-2">
		<h1 class="text-7xl font-extrabold font-rethink bg-gradient-to-r from-blue-600 via-purple-400 to-indigo-400 inline-block text-transparent bg-clip-text ">{title}</h1>
		{tagline && <p class="tagline text">{tagline}</p>}
	</div>
	<slot />
</div>
