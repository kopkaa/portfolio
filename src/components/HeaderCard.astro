---
import Icon from "./Icon.astro";
interface Props {
  icon: string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<div
  class="max-w-md p-6 bg-gradient-to-b from-[#1a1f3d] to-[#111728] text-white rounded-lg shadow-lg"
>
  <div
    class="flex items-center justify-center w-12 h-12 text-white rounded-full mb-4"
  >
    <Icon
      icon={icon}
      size="1.4em"
      class="text-[#c561f6] filter drop-shadow-[0_0_10px_rgba(118,17,166,0.8)]"
    />
  </div>
  <h3 class="text-2xl font-semibold mb-2">
    {title}
  </h3>
  <p class="text-gray-400 mb-6">
    {description}
  </p>
</div>
