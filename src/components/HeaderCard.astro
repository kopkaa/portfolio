---
import Icon from "./Icon.astro";
interface Props {
  icon: string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<div
  class="w-full max-w-[30rem] 2xl:max-w-[550px] min-h-[300px] 2xl:min-h-[350px] p-8 bg-gradient-to-b from-[#1a1f3d]/80 to-[#111728]/60 text-white rounded-xl shadow-2xl shadow-[#00000088] flex flex-col justify-start transition-transform hover:scale-[1.02] hover:shadow-lg hover:shadow-[#000000aa]"
>
  <div
    class="flex items-center justify-center w-12 h-12 mb-4 mx-auto md:mx-0"
  >
    <Icon
      icon={icon}
      size="1.6em"
      class="text-[#c561f6] filter drop-shadow-[0_0_10px_rgba(197,97,246,1)]"
    />
  </div>
  <h3 class="text-2xl font-semibold mb-8 tracking-wide">
    {title}
  </h3>
  <p class="text-gray-400/80 text-lg leading-relaxed">
    {description}
  </p>
</div>
