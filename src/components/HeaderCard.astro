---
import Icon from "./Icon.astro";
interface Props {
  icon: string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<div
  class="w-full max-w-[30rem] 2xl:max-w-[550px] min-h-[320px] 2xl:min-h-[350px] p-8 bg-gradient-to-b from-[#1a1f3d] to-[#111728] text-white rounded-lg shadow-lg flex flex-col justify-start"
>
  <div
    class="flex items-center justify-center w-12 h-12 text-white rounded-full mb-2"
  >
    <Icon
      icon={icon}
      size="1.4em"
      class="text-[#c561f6] filter drop-shadow-[0_0_20px_rgba(118,17,166,1)]"
    />
  </div>
  <h3 class="text-3xl font-semibold mb-6">
    {title}
  </h3>
  <p class="text-gray-400 text-lg mt-4">
    {description}
  </p>
</div>
